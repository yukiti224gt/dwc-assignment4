<h2 class="mt-2">New book</h2>
<%= form_with model: book_new, local:true do |f| %>
  <div class="form-group">
    <h4>title</h4>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' , class:"btn btn-success" %>
  </div>
<% end %>